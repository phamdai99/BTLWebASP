@*model IEnumerable<BTLWebASP.Models.SanPham>*@
@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    <!--Sản phẩm đang giảm giá-->
    var listProductSale = (List<BTLWebASP.Models.SanPham>)ViewBag.SaleProduct;
    <!--Sản phẩm bán chạy nhất-->
    var listProductBestSelling = (List<BTLWebASP.Models.SanPham>)ViewBag.BestSellingProduct;
}

<!-- Home slideder-->
@*Trang bìa*@
<div id="home-slider">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 header-top-right">
                <div class="homeslider">
                    <ul id="contenhomeslider">
                        <li><img alt="Funky roots" src="~/Assets/client/images/slide/img1.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/client/images/slide/img2.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/client/images/slide/img3.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/client/images/slide/img4.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/client/images/slide/img5.jpg" title="Funky roots" /></li>
                        <li><img alt="Funky roots" src="~/Assets/client/images/slide/img6.jpg" title="Funky roots" /></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- END Home slideder-->
<!--CONTENT-->
<div class="page-top">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <h2 class="page-heading">
                    <span class="page-heading-title"><img alt="fashion" src="~/Assets/client/images/commerce-tag.png" /> Khuyến Mãi</span>
                </h2>
                <div class="latest-deals-product">
                    <ul class="product-list owl-carousel" data-dots="false" data-loop="true" data-nav="true"
                        data-margin="10" data-autoplayTimeout="1000" data-autoplayHoverPause="true"
                        data-responsive='{"0":{"items":1},"600":{"items":3},"1000":{"items":5}}'>
                        @foreach (var item in listProductSale)
                        {
                            <li>
                                <div class="left-block">
                                    <a>
                                        <img class="img-responsive" alt="product"
                                             src="@item.HinhSP" />
                                    </a>

                                    <div class="quick-view">
                                        <a title="Add to my wishlist" class="heart" href="#"></a>
                                        <a title="Add to compare" class="compare" href="#"></a>
                                        <a title="Quick view" href="images/product-detail/vegetables/asparagus_600x600.jpg" class="search fancybox-button"></a>
                                    </div>
                                    <div class="add-to-cart">
                                        <a class="add-item-to-cart" title="Add to Carr" href="#" data-name="Asparagus - 1kg"
                                           data-price="38500" data-image="vegetables/asparagus_300x300.jpg" data-product-code="AS109">Add to Cart</a>
                                    </div>
                                    <div class="price-percent-reduction2">
                                        -30% OFF
                                    </div>
                                </div>
                                <div class="right-block">
                                    <h5 class="product-name"><a href="asparagus-detail.html">@item.TenSP</a></h5>

                                    <div class="content_price">
                                        <span class="price product-price">
                                            <span style="color: orangered">Giá tốt nhất:</span> @string.Format("{0:0,0}" + "đ", @item.giaBans.GiaMoi)
                                        </span>
                                        <br><span style="color: black">Giá:</span>
                                            <span class="price old-price">@string.Format("{0:0,0}" + "đ", @item.giaBans.GiaCu)</span>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content-page">
    <div class="container">
        <!--Danh mục nổi bật-->
        <div class="category-featured Vegetables">
            <nav class="navbar nav-menu show-brand">
                <div class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-brand"><a href="#"> <img alt="fashion" src="~/Assets/client/images/icon_like.png" /> Siêu giảm giá </a></div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse">

                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->

            </nav>

            <!--Danh sách sản phẩm bán chạy nhất-->
            <div class="product-featured clearfix">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="box-right">
                            <ul class="product-list">
                                @foreach (var item in listProductBestSelling)
                                {
                                    <li class="col-sm-4 product-item">
                                        <div class="left-block">
                                            <a>
                                                <img class="img-responsive" alt="product"
                                                     src="@Html.DisplayFor(model => item.HinhSP)" />
                                            </a>

                                            <div class="quick-view">
                                                <a title="Add to my wishlist" class="heart" href="#"></a>
                                                <a title="Add to compare" class="compare" href="#"></a>
                                                <a title="Quick view" href="~/Assets/client/images/product-detail/vegetables/spinach_600x600.jpg" class="search fancybox-button"></a>
                                            </div>
                                            <div class="add-to-cart">
                                                <a class="add-item-to-cart" title="Add to Cart" href="#" data-name="Spinach - 1kg"
                                                   data-price="55000" data-image="vegetables/spinach_300x300.jpg" data-product-code="SP109">Thêm vào giỏ hàng</a>
                                            </div>
                                            <div class="bestseller"></div>
                                        </div>
                                        <div class="right-block">
                                            <h5 class="product-name"><a href="ProductDetail?maSP=@item.MaSP">@item.TenSP</a></h5>
                                            <div class="content_price">
                                                <span class="price product-price"><span style="color: black">Giá:</span> @string.Format("{0:0,0}" + "đ", @item.giaBans.GiaMoi)</span>
                                            </div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>