@model BTLWebASP.Models.SanPham

@{
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
    @*var productDetail = (BTLWebASP.Models.SanPham)ViewBag.detailProduct;*@
}

<div class="columns-container">
    <div class="container" id="columns">
        <!-- row -->
        <div class="row">
            <!--Loại sản phẩm-->
            <div class="column col-xs-12 col-sm-3" id="left_column">
                <!-- block category -->
                <div class="block left-module">
                    <p class="title_block"><span class="fa fa-pagelines"></span> Sản phẩm</p>
                    <div class="block_content">
                        <!-- layered -->
                        <div class="layered layered-category">
                            <div class="layered-content">
                                <ul class="tree-menu">
                                    <li class="active"><span></span><a href="product-vegetables.html">Rau</a></li>
                                    <li><span></span><a href="product-fruits.html">Trái cây</a></li>
                                    <li><span></span><a href="product-cereals.html">Ngũ cốc</a></li>
                                    <li><span></span><a href="product-beans.html">Đậu</a></li>
                                    <li><span></span><a href="product-nuts-seeds.html">Các loại hạt & Giống</a></li>
                                    <li><span></span><a href="product-spices.html">Gia vị</a></li>
                                </ul>
                            </div>
                        </div>
                        <!-- ./layered -->
                    </div>
                </div>
            </div>
            <!-- ./left colunm -->
            <!-- Center colunm-->

            <div class="center_column col-xs-12 col-sm-9" id="center_column">
                <!-- Product -->
                <div id="product">
                    <!-- CHI TIẾT SẢN PHẨM -->
                    <div class="primary-box row">
                        <div class="pb-left-column col-xs-12 col-sm-6">
                            <!-- product-imge-->
                            <div class="product-image">
                                <div class="product-full">
                                    @{
                                        string linkImgProduct = Model.HinhSP + ".jpg";
                                    }
                                    <img id="product-zoom" src="~/Assets/client/images/product/@linkImgProduct"
                                         data-zoom-image="images/product-detail/cereals/barley_600x600.jpg" />
                                </div>
                                <div class="product-img-thumb" id="gallery_01">
                                    <ul class="owl-carousel" data-items="3" data-nav="true" data-dots="false" data-margin="20" data-loop="true">
                                        <li>
                                            <a href="#"
                                               data-image="images/product-detail/nuts/walnut_600x600.jpg"
                                               data-zoom-image="images/product-detail/nuts/walnut_600x600.jpg">
                                                <img id="product-zoom"
                                                     src="images/product-detail/nuts/walnut_300x300.jpg" />
                                            </a>
                                        </li>


                                    </ul>
                                </div>
                            </div>
                            <!-- product-imge-->
                        </div>

                        <div class="pb-right-column col-xs-12 col-sm-6">
                            <h1 class="product-name">@Model.TenSP</h1>

                            <div class="product-price-group">
                                @if (Model.giaBans.GiaCu != 0)
                                {
                                    <span class="price product-price">
                                        <span style="color: black">Giá tốt nhất:</span> @string.Format("{0:0,0}" + "đ", Model.giaBans.GiaMoi)
                                    </span>

                                    <span style="font-weight: bold">Giá: </span><span class="old-price">@string.Format("{0:0,0}" + "đ", Model.giaBans.GiaCu)</span>
                                    double giaM = Model.giaBans.GiaMoi;
                                    double giaC = Model.giaBans.GiaCu;
                                    int discount = Convert.ToInt32(100 - (giaM / giaC * 100));
                                    <span class="discount">-@discount%</span>
                                }
                                else
                                {
                                    <span class="price product-price">
                                        <span style="color: black">Giá:</span> @string.Format("{0:0,0}" + "đ", Model.giaBans.GiaMoi)
                                    </span>
                                }

                            </div>
                            <div class="info-orther">
                                <p>Mã sản phẩm: @Model.MaSP</p>

                                @{
                                    String temp = "";
                                    if (Model.MType == 1)
                                    {
                                        temp = "Sắp bán";
                                    }
                                    else
                                    {
                                        temp = "Trong kho";
                                    }
                                }
                                <p>Trạng thái: <span class="in-stock">@temp</span></p>

                            </div>
                            <div class="product-desc">
                                @{
                                    string[] a = Model.Mota.ToString().Split(new string[] { " " }, StringSplitOptions.None);
                                    string tam = "";
                                    if (a.Length < 12)
                                    {
                                        tam = Model.Mota;
                                    }
                                    else
                                    {
                                        for (int i = 0; i < 20; i++)
                                        {
                                            tam += a[i] + " ";
                                        }
                                        tam += "...";

                                    }
                                }
                                @tam
                            </div>
                            <div class="form-option">

                                <div class="attributes">
                                    <div class="attribute-label">Chất lượng:</div>
                                    <div class="attribute-list product-qty">
                                        <div class="qty">
                                            <input id="option-product-qty" type="text" value="1">
                                        </div>
                                        <div class="btn-plus">
                                            <a href="#" class="btn-plus-up">
                                                <i class="fa fa-caret-up"></i>
                                            </a>
                                            <a href="#" class="btn-plus-down">
                                                <i class="fa fa-caret-down"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="form-action">
                                <div class="button-group">
                                    <a class="add-item-to-cart btn-add-cart" title="Add to Cart" href="#"
                                       data-name="Barley - 1kg"
                                       data-price="21000" data-image="cereals/barley_300x300.jpg"
                                       data-product-code="BL237">Thêm vào giỏ hàng</a>
                                </div>
                                <div class="button-group">
                                    <a class="wishlist" href="#">
                                        <i class="fa fa-heart-o"></i>
                                        <br>Yêu thích
                                    </a>
                                    <a class="compare" href="#">
                                        <i class="fa fa-signal"></i>
                                        <br>
                                        So sánh
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- BÌNH LUẬN & CHI TIẾT -->
                    <div class="product-tab">
                        <ul class="nav-tab" style="margin-bottom: 0px;">
                            <li class="active">
                                <a aria-expanded="false" data-toggle="tab" href="#product-detail">CHI TIẾT</a>
                            </li>
                            <li>
                                <a aria-expanded="true" data-toggle="tab" href="#comment">BÌNH LUẬN</a>
                            </li>

                        </ul>
                        <div class="tab-container">
                            <div id="product-detail" class="tab-panel active">
                                <p>
                                    @Model.Mota
                                </p>
                            </div>
                            <div id="comment" class="tab-panel">
                                <div class="fb-comments" data-href="https://www.facebook.com/hungdng.92"
                                     data-width="100%" data-numposts="5"></div>
                            </div>
                        </div>
                    </div>


                    <!-- SẢN PHẨM TƯƠNG TỰ -->
                    @*<div class="page-product-box">
                            <h2 class="page-heading">
                                <span class="page-heading-title"> SẢN PHẨM TƯƠNG TỰ</span>
                            </h2>
                            <ul class="product-list owl-carousel" data-dots="false" data-loop="true" data-nav="true"
                                data-margin="30" data-autoplayTimeout="1000" data-autoplayHoverPause="true"
                                data-responsive='{"0":{"items":1},"600":{"items":3},"1000":{"items":3}}'>
