@model IEnumerable<BTLWebASP.Models.GiaBan>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                Mã giá bán
            </th>
            <th>
                Mã sản phẩm
            </th>
            <th>
                Giá
            </th>
            <th>
                Ngày BĐ
            </th>
            <th>
                Ngày KT
            </th>
            <th>
                Chức năng
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaGB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gia)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NgayBD)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.NgayBD)
                </td>

                <td>
                    @Html.ActionLink("Cập nhật", "UpdateGiaBan", new { maGB = item.MaGB, maSP = item.MaSP, gia = item.Gia, ngayBD = item.NgayBD, ngayKT = item.NgayKT })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="~/Assets/admin/js/jquery-dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.22/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}

